<h1>New Author</h1>

<% if @author.errors.any? %>
<ul>
  <% @author.errors.full_messages.each do |i| %>
  <li> <%= i %> </li>
  <%end%>
</ul>
<%end%>

<%= form_for @author do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name%><br>
  <%=f.label :birth_year%>
  <%=f.text_field :birth_year%><br>
  <%=f.submit%>
<%end%>
